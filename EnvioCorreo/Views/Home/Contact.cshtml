@{
    ViewData["Title"] = "Contacto de Prueba";
}

<h1>@ViewData["Title"]</h1>

<p>Usa este formulario para probar el envío de correos a tu bandeja de Mailtrap.</p>

<div class="row">
    <div class="col-md-6">

        @* 💡 Usamos el Tag Helper de Formulario para apuntar a la acción EnviarContacto en HomeController *@
        <form asp-controller="Home" asp-action="EnviarContacto" method="post">

            <div class="form-group mb-3">
                <label for="nombre">Tu Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required>
            </div>

            <div class="form-group mb-3">
                <label for="emailUsuario">Tu Email</label>
                <input type="email" class="form-control" id="emailUsuario" name="emailUsuario" required>
            </div>

            <div class="form-group mb-3">
                <label for="mensaje">Mensaje</label>
                <textarea class="form-control" id="mensaje" name="mensaje" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Enviar Mensaje de Prueba</button>
        </form>
    </div>
</div>

<hr />

@* 💡 Muestra mensajes de éxito o error (usando TempData, como en tu controlador) *@
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-4">
        <strong>¡Éxito!</strong> @TempData["Mensaje"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-4">
        <strong>Error:</strong> @TempData["Error"]
    </div>
}